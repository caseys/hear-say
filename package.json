  "homepage": "https://github.com/caseys/hear-say#readme",
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "knip": "^5.76.1",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.0"
